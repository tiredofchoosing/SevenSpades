<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SevenSpadesApp.Controls.PlayerBidInfo"
             x:Name="this">

    <Grid x:Name="mainGrid" ColumnDefinitions="Auto,*,*" HorizontalOptions="Fill">

        <Label
            x:Name="playerNameLbl"
            Text="Player"
            FontSize="32"
            Grid.Column="0"/>

        <Entry
            x:Name="bidEntry"
            Placeholder="Bid"
            MaxLength="1"
            FontSize="32"
            HorizontalOptions="Fill"
            Grid.Column="1"/>

        <Entry
            x:Name="factEntry"
            Placeholder="Fact"
            MaxLength="1"
            FontSize="32"
            HorizontalOptions="Fill"
            Grid.Column="2"/>
    </Grid>
</ContentView>
