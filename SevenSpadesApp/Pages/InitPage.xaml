<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SevenSpadesApp.Pages.InitPage"
             xmlns:controls="clr-namespace:SevenSpadesApp.Controls"
             Title="InitPage">


    <ScrollView
        BackgroundColor="Gray"
        MinimumWidthRequest="300"
        MaximumWidthRequest="400">

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Список игроков"
                FontSize="32"
                HorizontalOptions="Center" />

            <VerticalStackLayout x:Name="playersInitInfo">
                <!--<controls:PlayerInitInfo/>-->
            </VerticalStackLayout>

            <Button
                x:Name="nextBtn"
                Text="Далее"
                FontSize="36"
                HeightRequest="80"
                CornerRadius="40"
                Clicked="OnNextBtn_Clicked"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>